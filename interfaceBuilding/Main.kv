        Label:
            text : "email"
            size_hint : (None, None)
            height : 50
            width : 200
            pos_hint: {'center_x': .5, 'center_y': .5}
            canvas.before:
                Color:
                    rgba : (148, 204, 0, 0.5)

                Rectangle:
                    pos: self.pos
                    size: self.size

        TextInput:
            multiline : False




        Label:
            text : "password"
            size_hint : (None, None)
            height : 50
            width : 200
            pos_hint: {'center_x': .5, 'center_y': .5}
            canvas.before:
                Color:
                    rgba : (148, 204, 0, 0.5)

                Rectangle:
                    pos: self.pos
                    size: self.size

        TextInput:
            multiline : False


        Button:
            text: "Submit"
            font_size : 32
            on_release:

        Button:
            text: "Go Back"
            font_size : 32
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "down"
                root.manager.transition.duration = 0.4



