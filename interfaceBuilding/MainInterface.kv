<MainInterfaceLayout>

    email:email
    password:password

    GridLayout:
        cols:1
        size: root.width -500, root.height-200
        pos: 255,100
        GridLayout:
            cols:2

            Label:
                text: "email: "
            TextInput:
                id: "email"
                multiline:False

            Label:
                text: "password: "
            TextInput:
                id: "password"
                multiline:False


        Button:
            text: "LogIn"
            font_size: 24
            on_press: root.press_login()

        Button:
            text: "SignUp"
            font_size: 24
            on_press: root.press_signin()